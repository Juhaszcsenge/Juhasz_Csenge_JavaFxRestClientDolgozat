<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/null"
      fx:controller="com.example.juhasz_csenge_javafxrestclientdolgozat.ListCsillagaszat">
    <padding>
        <Insets
                bottom="20.0"
                left="20.0"
                right="20.0"
                top="20.0"
        />
    </padding>
    <children>
        <HBox spacing="20.0">
            <children>
                <Button fx:id="insertButton"
                        mnemonicParsing="false"
                        onAction="#insertClick"
                        text="Insert"
                />
                <Button fx:id="updateButton"
                        mnemonicParsing="false"
                        onAction="#updateClick"
                        text="Update"
                />
                <Button fx:id="deleteButton"
                        mnemonicParsing="false"
                        onAction="#deleteClick"
                        text="Delete" />
            </children>
        </HBox>
        <TableView fx:id="peopleTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="id"
                             minWidth="50.0"
                             prefWidth="75.0"
                             text="Urallomas"
                />
                <TableColumn fx:id="name"
                             minWidth="50.0"
                             prefWidth="200.0"
                             text="Jelentkezok"
                />
                <TableColumn fx:id="emailCol"
                             minWidth="50.0"
                             prefWidth="200.0"
                             text="Email"
                />
                <TableColumn fx:id="ageCol"
                             minWidth="50.0"
                             prefWidth="75.0"
                             text="Letszam"
                />
            </columns>
        </TableView>
    </children>
</VBox>